{% extends "layout.html.twig" %}

{% block content %}
    <div class="container">
        {% for menu in menus %}
            <div class="jumbotron">
                <h1>{{ menu.nom }}</h1>

                <p>
                    {{ menu.prix }} €<br>
                    {{ menu.restaurant.nom }}
                </p>
                <h2>Ingrédients :</h2>
                <p>{{ menu.produit.nom }}</p>
                <img src="{{ menu.produit.getWebPath }}" alt="">

                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-default btn-lg pull-right"
                       href="{{ path('menu_update', {'id' : menu.id}) }}" role="button">
                        Mettre à jour
                    </a>
                    <a class="btn btn-danger btn-lg pull-right"
                       href="{{ path('menu_delete', {'id' : menu.id}) }}" role="button">
                        Suprimmer
                    </a>
                {% endif %}
            </div>
        {% endfor %}
    </div>

{% endblock %}