{% extends "layout.html.twig" %}

{% block content %}
    <div class="container">

        {% for message in app.session.getFlashBag.get('success_register') %}
            <br>{{ message }}<br>
        {% endfor %}

        <form action="{{ path('connexion') }}" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Nom d'utilisateur</label>
                <input type="text" class="form-control" name="_username" id="exampleInputEmail1"
                       placeholder="Nom d'utilisateur">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Mot de passe</label>
                <input type="password" class="form-control" name="_password" id="exampleInputPassword1"
                       placeholder="Mot de passe">
            </div>
            <button type="submit" class="btn btn-default">Se connecter</button>
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
        </form>
        <a href="{{ path('inscription') }}" type="button" class="btn btn-default pull-right">S'inscrire</a>
    </div>
{% endblock %}
